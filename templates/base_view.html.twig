{% extends 'base.html.twig' %}

{% block content %}
    <div class="float-right">
        <a class="btn btn-primary" href="{{ formRoute }}">Insert new</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                {% for column in columns %}
                    <th scope="col">{{ column }}</th>
                {% endfor %}
                {% if formRoute is not null %}
                    <th scope="col"></th>
                {% endif %}
                {% if deleteRoute is not null %}
                    <th scope="col"></th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for row in rows %}
                <tr>
                    {% for value in row.values %}
                        <td>{{ value }}</td>
                    {% endfor %}
                    {% if formRoute is not null %}
                        <td>
                            <a href="{{ formRoute ~ row.id }}">Edit</a>
                        </td>
                    {% endif %}
                    {% if deleteRoute is not null %}
                        <td>
                            <a href="{{ deleteRoute ~ row.id }}">Delete</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>

    </table>
{% endblock %}